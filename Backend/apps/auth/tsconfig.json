{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2021",
    "outDir": "dist",
    "rootDir": "../../", // <-- AsÃ­ incluye src y libs/common/src
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@common/*": ["../../libs/common/src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "../../libs/common/src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}