{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "skipLibCheck": true,
     "baseUrl": "./",
    "paths": {
      "@common/*": ["../../libs/common/src/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*", "src/role.enum.ts", "src/dto"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}