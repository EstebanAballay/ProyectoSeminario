{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "compilerOptions": {
    "deleteOutDir": true
  },
  "projects": {
    "cobro": {
      "type": "application",
      "root": "apps/cobro",
      "entryFile": "main",
      "sourceRoot": "apps/cobro/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cobro/tsconfig.app.json"
      }
    },
    "viaje": {
      "type": "application",
      "root": "apps/viaje",
      "entryFile": "main",
      "sourceRoot": "apps/viaje/src",
      "compilerOptions": {
        "tsConfigPath": "apps/viaje/tsconfig.app.json"
      }
    },
    "unidad": {
      "type": "application",
      "root": "apps/unidad",
      "entryFile": "main",
      "sourceRoot": "apps/unidad/src",
      "compilerOptions": {
        "tsConfigPath": "apps/unidad/tsconfig.app.json"
      }
    },
    "users": {
      "type": "application",
      "root": "apps/users",
      "entryFile": "main",
      "sourceRoot": "apps/users/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users/tsconfig.app.json"
      }
    }
  }
}
